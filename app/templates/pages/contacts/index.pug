extends ../../template/main-page

block body
  main
    .blog-banner
      .container
        +breadcrumbs
        +title({
              text: 'Контакты',
              addClass: 'title__blog',
            })
  .form-container
    .container         
      +callback({
        title: 'Оставить заявку ',
        policy: 'Нажимая на кнопку “Отправить” вы соглашаетесь на обработку персональных данных',
        wraps: [{
            mods: ['small'],
            inputs: [{
              placeholder: 'Ваше имя',
