              placeholder: 'Ваш телефон',
              tag: 'input',
              type: 'tel'
            }]
          },{
            inputs: [{
              placeholder: '123',
              tag: 'select',
              selects: [{
                text: 'Номер 1',
              },{
                text: 'Номер 1',
              },{
                text: 'Номер 1',
              },{
                text: 'Номер 1',
              }]         
            },{
              mods: ['big'],
              placeholder: 'Опишите ваши пожелания',
              tag: 'textarea'
            }]
          }]
        })
  +subscribe({
        background: '../img/subscribe.png',
        items: [{
          mods: ['wrapper']
        }]
      })
        +title({
        mods: ['subscribe'],
        text: 'Подписывайтесь на новости',
        addClass: 'text-white'
        })
        +input({
          items: [{
            mods: ['subscribe'],
            placeholder: 'Ваше имя',
        },
        {
          placeholder: 'Ваш e-mail',
        }]
      })
        +button({
            mods: ['red'],
            text: ['Все отзывы']
          })
    
